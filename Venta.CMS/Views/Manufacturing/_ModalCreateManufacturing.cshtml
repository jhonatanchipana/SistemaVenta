<div class="col-lg-4 col-md-6">
    <div class="mt-3">

        <!-- Modal -->
        <div class="modal fade" id="modalManufacturingPost" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <form id="form">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Registrar Fabricación de Prenda</h5>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>

                        <div class="modal-body">

                            <div class="row g-2">
                                <input type="text"
                                        id="clothingAutocomplete"
                                       class="form-control autocomplete-input"
                                       placeholder="Seleccione una prenda" />
                                <input id="clothingId" name="clothingId" type="hidden" data-rule-required="true" data-msg-required="Seleccione una prenda" value=""/>
                                <span data-valmsg-for="clothingId" data-valmsg-replace="true" class="text-danger"></span>
                            </div>
                            <div class="row g-2">
                                <table class="table" id="tableClothingSize"></table>
                            </div>
                             <div class="row g-2 text-center" id="validationCustom">
                                
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Cerrar
                            </button>
                            <button type="button" class="btn btn-primary" id="btn-post">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

